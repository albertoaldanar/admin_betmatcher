<style>
body {
  font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
}

.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #111;
    overflow-y: hidden;
    transition: 1s;
    padding-top: 60px;
}

.sidenav a {
    padding: 30px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

.sidenav a:hover {
    color: #f1f1f1;
}

.sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
    cursor: pointer;
}

</style>

<div id="mySidenav" class="sidenav">
  <a class="closebtn" onclick="closeNav()">X</a>
  <%=link_to "Registrar", root_path%>
  <%=link_to "Salidas por terminar", salidas_path%>
  <%=link_to "Salidas terminadas", terminadas_path%>
  <br/>
  <br/>
  <br/>
  <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete%>
</div>

<span style="font-size:30px;cursor:pointer; margin-left: 10px; margin-top: 10px;" onclick="openNav()">&#9776; </span>

<script>
function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
}

function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
}
</script>
