<style>
  .form {
    border-radius: 10px;
    background-color: #F5F5F5;
    margin: 40px;
  }
  .input{
    margin-bottom: 10px;
  }
</style>

<div class =" form text-center">
  <ul class ="list-unstyled">
    <li class ="input">
      <%=simple_form_for @game do |f|%>
        <%= f.input :local%>
        <%= f.input :visit%>
        <%= f.input :stadium%>
        <%= f.input :date%>
        <%= f.button :submit, class: "btn btn-default"%>
      <%end%>
    </li>
  </ul>
</div>
